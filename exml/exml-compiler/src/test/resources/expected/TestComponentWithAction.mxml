<?xml version="1.0" encoding="UTF-8"?>
<!--- 
    This is a TestComponent which defines a button with an action.
   -->
<Panel          xmlns:fx="http://ns.adobe.com/mxml/2009"
                xmlns:local="testPackage.*"
                xmlns:exml="http://www.jangaroo.net/exml/0.8"
                xmlns="exml:ext.config"
                xmlns:test="exml:testNamespace.config"
                title="{config.defaultTitle}">
  <fx:Script><![CDATA[
    public native function TestComponentWithAction(config:testPackage.TestComponentWithAction = null);
  ]]></fx:Script>
  <fx:Declarations>
    <local:TestComponentWithAction id="config"/>
  </fx:Declarations>

    <items>
      <Button>
        <baseAction>
          <test:TestAction/>
        </baseAction>
      </Button>
    </items>
  
</Panel>
