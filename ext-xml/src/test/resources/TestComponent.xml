<?xml version="1.0" encoding="ISO-8859-1"?>
<component xmlns="http://net.jangaroo.com/extxml"
           xmlns:ext="http://extjs.com/ext3"
           xmlns:local="http://net.jangaroo/extxml/test">
  <cfg name="myProperty" type="String"/>
  <!-- superclass of the the component with attributes-->
  <ext:panel title="I am a panel" layout="{config.myLayout}">
    <!-- attribute with sub-attributes
    default:{layout:"border"},
    -->
    <default layout="border"/>

    <!-- attribute-->
    <layoutConfig bla="blub">
      <anchor style="test"/>
      <border type="solid"/>
    </layoutConfig>

    <!-- array with compontent
    items:{xtype:"testAll", ...}
    -->
    <items>
      <local:testAll/>
      <json><![CDATA[{xtype: "editortreepanel"}]]></json>
    </items>

    <!-- array
    menu:[
      {...},
      {...}
    ]
    -->
    <menu>
      <ext:menuitem text="juhu1"/>
      <ext:menuitem text="juhu2"/>
      <ext:menuitem text="juhu3"/>
    </menu>

    <tools>
      <!--
      anonymous object in array:

      tools:[
        {id:"gear",
        handler:function(){} }
      ]
      -->
      <json id="gear" handler="{function(x){return ''+x;}}"/>
    </tools>



  </ext:panel>
</component>