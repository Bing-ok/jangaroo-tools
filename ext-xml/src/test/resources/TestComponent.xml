<?xml version="1.0" encoding="ISO-8859-1"?>
<component xmlns="http://net.jangaroo.com/extxml"
           xmlns:ext="http://extjs.com/ext3"
           xmlns:local="http://net.jangaroo/extxml/test">
  <!-- Component with attribute-->
  <ext:panel title="I am inside a package!" layout="{config.myLayout}">
    <!-- attribute with sub-attributes
    default:{layout:"border"},
    -->
    <default layout="border"/>

    <!-- attribute-->
    <layoutConfig bla="blub">
      <anchor style="test"/>
      <border type="3d"/>
    </layoutConfig>

    <!-- array with compontent
    items:{xtype:"testAll", ...}
    -->
    <items>
      <local:testAll/>
      <json><![CDATA[
                {
                  xtype: "editortreepanel",
                  id: "navigation-tree-panel",
                  title: "Navigation",
                  rootVisible: false,
                  url: "navtree.jsp",
                  selectionChangeListener: currentContentController
                }
          ]]></json>
    </items>

    <!-- array
    menu:[
      {...},
      {...}
    ]
    -->
    <menu>
      <ext:menuitem text="juhu1"/>
      <ext:menuitem text="juhu2"/>
      <ext:menuitem text="juhu3"/>
    </menu>

    <tools>
      <!--
      anonymous object in array:

      tools:[
        {id:"gear",
        handler:function(){} }
      ]
      -->
      <ext:json id="gear" handler="{function(x){return ''+x;}}"/>
    </tools>



  </ext:panel>
</component>