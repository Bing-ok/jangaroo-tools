<?xml version="1.0" encoding="ISO-8859-1"?>
<component xmlns="http://net.jangaroo.com/extxml/0.1"
           xmlns:ext="http://extjs.com/ext3">
  <!-- add an extra import statement to the class -->
  <import class="ext.MessageBox"/>

  <!-- descripte the config properties of this compontent -->
  <cfg name="myProperty" type="String"/>
  <cfg name="myPropertyWithDescription" type="Boolean">
    <description>
      <![CDATA[This is my <b>descripion</b>]]>
    </description>
  </cfg>

  <!-- superclass of the the component with attributes-->
  <ext:panel title="I am a panel" layout="{config.myLayout}">
    <!-- attribute with sub-attributes
    default:{layout:"border"},
    -->
    <ext:defaults layout="border"/>

    <!-- attribute-->
    <ext:layoutConfig bla="blub">
      <anchor style="test"/>
      <border type="solid"/>
    </ext:layoutConfig>

    <!-- array with compontent
    items:{xtype:"testAll", ...}
    -->
    <ext:items>
      <ext:button text="Save"/>
      <object><![CDATA[{xtype: "editortreepanel"}]]></object>
      <object/>
    </ext:items>


    <!-- array
    menu:[
      {...},
      {...}
    ]
    -->
    <ext:menu>
      <ext:menuitem text="juhu1"/>
      <ext:menuitem text="juhu2"/>
      <ext:menuitem text="juhu3"/>
    </ext:menu>

    <ext:tools>
      <!--
      anonymous object in array:

      tools:[
        {id:"gear",
        handler:function(){} }
      ]
      -->
      <object id="gear" handler="{function(x){return ''+x;}}"/>
    </ext:tools>
  </ext:panel>
</component>