  <project-components>
    <!-- Add your project components here -->
    <component>
      <implementation-class>net.jangaroo.ide.idea.exml.ExmlProjectComponent</implementation-class>
    </component>
  </project-components>

  <actions>
    <!-- Add your actions here -->
