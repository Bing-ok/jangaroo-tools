<assembly>
  <id>binaries</id>

  <formats>
    <format>zip</format>
  </formats>

  <includeBaseDirectory>true</includeBaseDirectory>
  <baseDirectory>jangaroo-${project.version}</baseDirectory>
  
  <dependencySets>

    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>lib</outputDirectory>
      <scope>runtime</scope>
      <excludes>
        <exclude>net.jangaroo:jangaroo-compiler:zip:*</exclude>
        <exclude>net.jangaroo:jangaroo-doc</exclude>
      </excludes>
    </dependencySet>

    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory></outputDirectory>
      <unpack>true</unpack>
      <includes>
        <include>net.jangaroo:jangaroo-compiler:zip:doc</include>
      </includes>
    </dependencySet>

    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>runtime</outputDirectory>
      <unpack>true</unpack>
      <includes>
        <include>net.jangaroo:jangaroo-compiler:zip:runtime</include>
      </includes>
    </dependencySet>

    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>examples</outputDirectory>
      <unpack>true</unpack>
      <includes>
        <include>net.jangaroo:jangaroo-compiler:zip:examples</include>
      </includes>
    </dependencySet>

  </dependencySets>

  <files>

    <file>
      <source>src/etc/README.txt</source>
      <outputDirectory>/</outputDirectory>
      <filtered>true</filtered>
    </file>

    <file>
      <source>src/bin/jooc.bat</source>
      <outputDirectory>/bin</outputDirectory>
      <filtered>true</filtered>
      <lineEnding>dos</lineEnding>
    </file>

    <file>
      <source>src/bin/jooc</source>
      <outputDirectory>/bin</outputDirectory>
      <filtered>true</filtered>
      <lineEnding>unix</lineEnding>
      <fileMode>0755</fileMode>
    </file>

  </files>

  <fileSets>

    <fileSet>
      <directory>src/etc</directory>
      <outputDirectory>/</outputDirectory>
      <filtered>true</filtered>
      <excludes>
        <exclude>README.txt</exclude>
      </excludes>
    </fileSet>

    <fileSet>
      <directory>src</directory>
      <outputDirectory>/</outputDirectory>
      <filtered>true</filtered>
      <includes>
        <include>doc/**</include>
      </includes>
    </fileSet>

  </fileSets>
  
</assembly>