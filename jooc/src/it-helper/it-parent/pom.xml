<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <groupId>net.jangaroo.it</groupId>
  <artifactId>it-parent</artifactId>
  <version>testing</version>
  <packaging>pom</packaging>

  <dependencies>

    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>net.jangaroo</groupId>
      <artifactId>jangaroo-compiler</artifactId>
      <version>testing</version>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>net.jangaroo</groupId>
      <artifactId>jangaroo-compiler</artifactId>
      <classifier>tests</classifier>
      <version>testing</version>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>net.jangaroo</groupId>
      <artifactId>jangaroo-compiler</artifactId>
      <classifier>runtime</classifier>
      <version>testing</version>
      <scope>test</scope>
      <type>zip</type>
    </dependency>

    <dependency>
      <groupId>rhino</groupId>
      <artifactId>js</artifactId>
      <version>1.7R1</version>
      <scope>test</scope>
    </dependency>

  </dependencies>

  <build>
    <plugins>

      <plugin>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>

          <!-- unpack runtime .js and uncompiled test .js2 files to target/temp/js and target/js2 -->
          <execution>
            <phase>process-test-resources</phase>
            <goals>
              <goal>unpack</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>net.jangaroo</groupId>
                  <artifactId>jangaroo-compiler</artifactId>
                  <classifier>runtime</classifier>
                  <version>testing</version>
                  <type>zip</type>
                  <outputDirectory>${project.build.directory}/temp/js</outputDirectory>
                </artifactItem>

                <artifactItem>
                  <groupId>net.jangaroo</groupId>
                  <artifactId>jangaroo-compiler</artifactId>
                  <classifier>tests</classifier>
                  <version>testing</version>
                  <outputDirectory>${project.build.directory}/js2</outputDirectory>
                  <includes>
                    **/*.js2
                  </includes>
                </artifactItem>
              </artifactItems>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>

          <!-- compile the test .js2 files in target/js2 -->
          <execution>
            <id>compile-test-js2</id>
            <phase>process-test-resources</phase>
            <configuration>
              <tasks>
                <property name="test.classpath" refid="maven.test.classpath"/>
                <taskdef name="jscc" classname="com.coremedia.jscc.ant.JsccTask" classpath="${test.classpath}"/>

                <mkdir dir="target/temp/js"/>
                <jscc destdir="target/temp/js"
                      failonerror="true"
                      debug="${jscc.debug}"
                      verbose="true"
                      enableassertions="${jscc.assert}">
                  <include name="**/*.js2"/>
                  <exclude name="error/**/*.js2"/>
                  <src path="target/js2"/>
                </jscc>

              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.4.2</version>

        <!-- execute all tests defined in the main project -->
        <executions>
          <execution>
            <phase>test</phase>
            <goals>
              <goal>test</goal>
            </goals>
            <configuration>
              <testClassesDirectory>../../../target/test-classes</testClassesDirectory>
              <redirectTestOutputToFile>true</redirectTestOutputToFile>
              <includes>
                <include>net/jangaroo/test/integration/**/*</include>
              </includes>
              <systemProperties>
                <property>
                  <name>com.coremedia.jscc.test.source</name>
                  <value>${basedir}/target/js2</value>
                </property>
                <property>
                  <name>com.coremedia.jscc.test.destination</name>
                  <value>${basedir}/target/temp/js</value>
                </property>
              </systemProperties>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <properties>
    <jscc.debug>true</jscc.debug>
    <jscc.assert>true</jscc.assert>
  </properties>
</project>

