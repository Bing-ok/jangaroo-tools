import java.io.*; // <%@page import="java.io.*" %>

//<%! public boolean test(File basedir) {
boolean result = true;

try
{
    File target = new File( basedir, "target" );
    if ( !target.exists() || !target.isDirectory() )
    {
        print( "target file is missing or a directory." );
        return false;
    }

    File artifact = new File( target, "simple-lib-with-test-1.0-SNAPSHOT.jar" );
    if ( !artifact.exists() )
    {
        print( "artifact file is missing or a directory." );
        return false;
    }


    File sourceartifact = new File( target, "simple-lib-with-test-1.0-SNAPSHOT-sources.jar" );
    if ( !sourceartifact.exists() )
    {
        print( "sourceartifact file is missing or a directory." );
        return false;
    }


    File jsDir = new File ( target, "packages/local/package/src" );
    if ( !jsDir.exists() || !jsDir.isDirectory() )
    {
        print( "jangaroo-output/src directory is missing or not a directory." );
        return false;
    }

    File helloWorldJs = new File ( jsDir, "net/jangaroo/example/HelloWorld.js" );
    if ( !helloWorldJs.exists() || !helloWorldJs.isFile() )
    {
        print( "HelloWorld.js output file is missing or not a file." );
        return false;
    }

    File testClassJs = new File ( jsDir, "net/jangaroo/example/TestClass.js" );
    if ( !testClassJs.exists() || !testClassJs.isFile() )
    {
        print( "TestClass.js output file is missing or not a file." );
        return false;
    }

    File testJsDir = new File ( target, "jangaroo-output-test/src" );
    if ( !testJsDir.exists() || !testJsDir.isDirectory() )
    {
        print( "jangaroo-output-test/src directory is missing or not a directory." );
        return false;
    }

    testClassJs = new File ( testJsDir, "net/jangaroo/example/HelloWorldTest.js" );
    if ( !testClassJs.exists() || !testClassJs.isFile() )
    {
        print( testClassJs + " output file is missing or not a file." );
        return false;
    }

    testClassJs = new File ( testJsDir, "suite/TestSuite.js" );
    if ( !testClassJs.exists() || !testClassJs.isFile() )
    {
        print( testClassJs + " output file is missing or not a file." );
        return false;
    }

    File jarFile = new File( target, "simple-lib-with-test-1.0-SNAPSHOT.jar" );
    if ( !jarFile.isFile() )
    {
        print( "JAR file is missing" );
        return false;
    }

    File sourcesJarFile = new File( target, "simple-lib-with-test-1.0-SNAPSHOT-sources.jar" );
    if ( !sourcesJarFile.isFile() )
    {
        print( "Sources JAR file is missing" );
        return false;
    }

}
catch( Exception e )
{
    e.printStackTrace();
    result = false;
}

return result;
