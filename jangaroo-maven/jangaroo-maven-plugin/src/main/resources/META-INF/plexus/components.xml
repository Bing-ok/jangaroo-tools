<component-set>
  <components>

    <component>
      <role>org.apache.maven.shared.dependency.analyzer.ProjectDependencyAnalyzer</role>
      <role-hint>skipJangarooAnalyzer</role-hint>
      <!-- there is no implementation of SARUnArchiver, but ZipUnArchive will do the job -->
      <implementation>net.jangaroo.jooc.mvnplugin.analyzer.SkipJangarooAnalyzer</implementation>
      <instantiation-strategy>per-lookup</instantiation-strategy>
    </component>

    <component>
      <role>org.apache.maven.AbstractMavenLifecycleParticipant</role>
      <role-hint>JangarooResourcesExtension</role-hint>
      <implementation>net.jangaroo.jooc.mvnplugin.lifecycle.JangarooResourcesExtension</implementation>
    </component>

    <!--
       A custom artifact handler for jangaroo modules.
       This requires the plugin to be configured with <extensions> set to true
       on any project that uses javascript dependencies.
    -->
    <component>
      <role>org.apache.maven.artifact.handler.ArtifactHandler</role>
      <role-hint>jangaroo-pkg</role-hint>
      <implementation>org.apache.maven.artifact.handler.DefaultArtifactHandler</implementation>
      <configuration>
        <type>pkg</type>
        <extension>pkg</extension>
        <language>extjs</language>
        <addedToClasspath>false</addedToClasspath>
        <packaging>jangaroo-pkg</packaging>
      </configuration>
    </component>
    <component>
      <role>org.apache.maven.artifact.handler.ArtifactHandler</role>
      <role-hint>jangaroo-app</role-hint>
      <implementation>org.apache.maven.artifact.handler.DefaultArtifactHandler</implementation>
      <configuration>
        <type>jangaroo-app</type>
        <extension>jar</extension>
        <language>jangaroo</language>
        <addedToClasspath>false</addedToClasspath>
        <packaging>jangaroo-app</packaging>
      </configuration>
    </component>

    <!--
    A custom lifecycle for javascript packaging
    -->
    <component>
      <role>org.apache.maven.lifecycle.mapping.LifecycleMapping</role>
      <role-hint>jangaroo-pkg</role-hint>
      <implementation>org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping</implementation>
      <configuration>
        <phases>
          <generate-sources>net.jangaroo:jangaroo-maven-plugin:${pom.version}:properties
          </generate-sources>
          <process-resources>net.jangaroo:jangaroo-maven-plugin:${pom.version}:generate-ws,
            org.apache.maven.plugins:maven-resources-plugin:resources</process-resources>
          <compile>net.jangaroo:jangaroo-maven-plugin:${pom.version}:compile</compile>
          <process-classes>net.jangaroo:jangaroo-maven-plugin:${pom.version}:package-pkg</process-classes>
          <process-test-resources>org.apache.maven.plugins:maven-resources-plugin:testResources</process-test-resources>
          <test-compile>net.jangaroo:jangaroo-maven-plugin:${pom.version}:testCompile</test-compile>
          <test>net.jangaroo:jangaroo-maven-plugin:${pom.version}:test</test>
          <package>net.jangaroo:jangaroo-maven-plugin:${pom.version}:package</package>
          <verify>org.apache.maven.plugins:maven-source-plugin:jar-no-fork</verify>
          <install>org.apache.maven.plugins:maven-install-plugin:install</install>
          <deploy>org.apache.maven.plugins:maven-deploy-plugin:deploy</deploy>
        </phases>
      </configuration>
    </component>

    <component>
      <role>org.apache.maven.lifecycle.mapping.LifecycleMapping</role>
      <role-hint>jangaroo-app</role-hint>
      <implementation>org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping</implementation>
      <configuration>
        <phases>
          <generate-sources>net.jangaroo:jangaroo-maven-plugin:${pom.version}:properties
          </generate-sources>
          <process-resources>net.jangaroo:jangaroo-maven-plugin:${pom.version}:generate-ws,
            net.jangaroo:jangaroo-maven-plugin:${pom.version}:generate-app,
            org.apache.maven.plugins:maven-resources-plugin:resources</process-resources>
          <compile>net.jangaroo:jangaroo-maven-plugin:${pom.version}:compile</compile>
          <process-test-resources>org.apache.maven.plugins:maven-resources-plugin:testResources</process-test-resources>
          <package>net.jangaroo:jangaroo-maven-plugin:${pom.version}:package-app</package>
          <verify>org.apache.maven.plugins:maven-source-plugin:jar-no-fork</verify>
          <install>org.apache.maven.plugins:maven-install-plugin:install</install>
          <deploy>org.apache.maven.plugins:maven-deploy-plugin:deploy</deploy>
        </phases>
      </configuration>
    </component>

  </components>
</component-set>
