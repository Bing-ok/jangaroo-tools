import java.io.*; // <%@page import="java.io.*" %>

//<%! public boolean test(File basedir) {
boolean result = true;

try
{
    File target = new File( basedir, "target" );
    if ( !target.exists() || !target.isDirectory() )
    {
        System.err.println( "target file is missing or a directory." );
        return false;
    }

    File artifact = new File( target, "simple-lib-with-test-1.0-SNAPSHOT.jar" );
    if ( !artifact.exists() )
    {
        System.err.println( "artifact file is missing or a directory." );
        return false;
    }


    File sourceartifact = new File( target, "simple-lib-with-test-1.0-SNAPSHOT-sources.jar" );
    if ( !sourceartifact.exists() )
    {
        System.err.println( "sourceartifact file is missing or a directory." );
        return false;
    }


    File jsDir = new File ( target, "joo"+File.separator+"scripts"+File.separator+"classes" );
    if ( !jsDir.exists() || !jsDir.isDirectory() )
    {
        System.err.println( "joo/scripts/classes directory is missing or not a directory." );
        return false;
    }

    File helloWorldJs = new File ( jsDir, "net"+File.separator+"jangaroo"+File.separator+"example"+File.separator+"HelloWorld.js" );
    if ( !helloWorldJs.exists() || !helloWorldJs.isFile() )
    {
        System.err.println( "HelloWorld.js output file is missing or not a file." );
        return false;
    }

    File testClassJs = new File ( jsDir, "net"+File.separator+"jangaroo"+File.separator+"example"+File.separator+"TestClass.js" );
    if ( !testClassJs.exists() || !testClassJs.isFile() )
    {
        System.err.println( "TestClass.js output file is missing or not a file." );
        return false;
    }

    File classRuntimeJs = new File ( target, "joo"+File.separator+"scripts"+File.separator+"simple-lib-with-test.js" );
    if ( !classRuntimeJs.exists() || !classRuntimeJs.isFile() )
    {
        System.err.println( "joo/scripts/simple-lib-with-test.js runtime file is missing or not a file." );
        return false;
    }


    File testJsDir = new File ( target, "joo-test/scripts" );
    if ( !testJsDir.exists() || !testJsDir.isDirectory() )
    {
        System.err.println( "joo-test/scripts directory is missing or not a directory." );
        return false;
    }

    testClassJs = new File ( testJsDir, "classes"+File.separator+"net"+File.separator+"jangaroo"+File.separator+"example"+File.separator+"HelloWorldTest.js" );
    if ( !testClassJs.exists() || !testClassJs.isFile() )
    {
        System.err.println( testClassJs + " output file is missing or not a file." );
        return false;
    }

    testClassJs = new File ( testJsDir, "classes"+File.separator+"suite"+File.separator+"TestSuite.js" );
    if ( !testClassJs.exists() || !testClassJs.isFile() )
    {
        System.err.println( testClassJs + " output file is missing or not a file." );
        return false;
    }

    File jarFile = new File( target, "simple-lib-with-test-1.0-SNAPSHOT.jar" );
    if ( !jarFile.isFile() )
    {
        System.err.println( "JAR file is missing" );
        return false;
    }

    File sourcesJarFile = new File( target, "simple-lib-with-test-1.0-SNAPSHOT-sources.jar" );
    if ( !sourcesJarFile.isFile() )
    {
        System.err.println( "Sources JAR file is missing" );
        return false;
    }

}
catch( Exception e )
{
    e.printStackTrace();
    result = false;
}

return result;
